<html>
<head>
    <%- include('../components/head'); %>
</head>
<body>
    <div class="authn">
        <div class="signon">
            <div class="banner">
                Pyrates
            </div>
            <div class="logo">
                <img src="/assets/images/jolly-roger.png" />
            </div>
            <% if (error) { %>
            <div class="error">
                <%= error %>
            </div>
            <% } %>
            <div class="form">
                <form class="signon" method="post">
                    <label name="username">User Name</label><br>
                    <input type="text" name="username" value="<%= username %>" /><br>
                    <label name="password">Password</label><br>
                    <input type="password" name="password" /><br>
                    <input type="submit" />                  
                </form>
            </div>
        </div>
    </div>    

    <%- include('../components/footer'); %>
</body>
</html>